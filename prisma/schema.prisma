generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

enum Locale {
  SP
  RJ
  MG
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(MEMBER)
  created_at    DateTime @default(now())

  @@map("users")
}

model Pet {
  id         String   @id @default(uuid())
  name       String
  race       String
  size       Size
  age        Int
  locale     Locale
  created_at DateTime @default(now())

  @@map("pets")
}

model ORG {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(ADMIN)
  address       String
  phone         String
  locale        Locale
  created_at    DateTime @default(now())

  @@map("orgs")
}
